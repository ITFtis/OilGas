<script src="~/Scripts/prjReport/GasLawBan_Select.js"></script>
@using Dou.Misc.Extension
@Html.MenuMap()
@Html.DataManagerOptionsJavascript(null, "douoptions")

<link href="~/Content/prj/fonts/reportOil.css" rel="stylesheet">

<table class="mTable" width="100%">
    <colgroup>
        <col width="20%" align="right" />
        <col width="80%" class="td_right" />
    </colgroup>
    <tr>
        <td>
            縣市別：
            <div class="form-check" group="g1">
                <input class="form-check-input" type="checkbox" value="" id="AllCityCode">
                <label class="form-check-label" for="AllCityCode">
                    全部
                </label>
            </div>
        </td>
        <td>
            <div class="row">
                @{
                    List<OilGas.Models.CityCode> cityCode = ViewBag.CityCode;
                    if (cityCode != null)
                    {
                        foreach (var item in cityCode)
                        {
                            <div class="form-check col-1 ms-3">
                                <input class="form-check-input" type="checkbox" fsource="chk_City" id="@item.GSLCode" value="@item.GSLCode" name="filterConditions">
                                <label class="form-check-label" for="@item.GSLCode">
                                    @item.CityName
                                </label>
                            </div>
                        }
                    }
                }
            </div>
        </td>
    </tr>
    <tr>
        <td>
            案件編號：
        </td>
        <td>
            <div class="row">
                <div class="col-3">
                    <input class="form-control" id="txt_CaseNo" name="filterConditions" />
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            受處分人/公司名稱：
        </td>
        <td>
            <div class="row">
                <div class="col-3">
                    <input class="form-control" id="txt_Name" name="filterConditions" />
                </div>
                <div class="text-danger col-3">
                    (可模糊查詢)
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            查獲日期：
        </td>
        <td>
            <div class="row">
                <div class="col-3">
                    <input type="date" id="txt_Start_Seized_date" name="filterConditions" class="form-control" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}" placeholder="2017/01/01">
                </div>
                <div class="col-3">
                    <input type="date" id="txt_End_Seized_date" name="filterConditions" class="form-control" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}" placeholder="2017/01/01">
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            處分日期：
        </td>
        <td>
            <div class="row">
                <div class="col-3">
                    <input type="date" id="txt_Start_Disposal_date" name="filterConditions" class="form-control" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}" placeholder="2017/01/01">
                </div>
                <div class="col-3">
                    <input type="date" id="txt_End_Disposal_date" name="filterConditions" class="form-control" pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}" placeholder="2017/01/01">
                </div>
                <div class="col-3">
                    <button id="btnSearch" class="btn btn-success">開始查詢</button>
                    <button id="btnExcel" class="btn btn-success">匯出Excel</button>
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <td colspan="2">
            <table id="_table"></table>
        </td>
    </tr>
</table>
